<Page x:ConnectionId='1'
    x:Class="Metro_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
                        
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <!--<NavigationView x:Name="MyNavView" Header="Home" SelectionChanged="MyNavView_SelectionChanged">
            <NavigationView.MenuItems>
                <NavigationViewItem IsSelected="True" Content="Home" Icon="Home"/>
            </NavigationView.MenuItems>
            
            <Frame Name="MyFrame" 
                   Background="WhiteSmoke"/>
        </NavigationView>-->

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <RelativePanel>
            <Button x:ConnectionId='9' Height="40" Width="40" 
                    FontFamily="Segoe MDL2 Assets" 
                    Content="" 
                    FontWeight="Bold"
                    Name="HamburgerButton" 
                                                 />
            <TextBlock x:ConnectionId='10' Name="HumburgerTB" 
                       Text="Home" 
                       VerticalAlignment="Center" 
                       RelativePanel.RightOf="HamburgerButton"
                       RelativePanel.AlignVerticalCenterWithPanel="True"
                       Margin="15,0,0,0"/>
            <SearchBox x:ConnectionId='11' x:Name="mySearchBox" 
                       FocusOnKeyboardInput="True"
                                                                  
                       SearchHistoryEnabled="True"
                       Margin="5,0,5,0"
                       Width="200"
                       PlaceholderText="Search ..."
                       RelativePanel.AlignRightWithPanel="True" 
                       RelativePanel.AlignVerticalCenterWithPanel="True"                                        />
        </RelativePanel>
        <SplitView x:ConnectionId='2' Grid.Row="1"
                   Name="MySplitView" 
                   CompactPaneLength="40"
                   DisplayMode="Overlay">
            <SplitView.Pane>
                <Grid>
                    <ListBox x:ConnectionId='3' Name="MyListBox"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             ScrollViewer.VerticalScrollMode="Auto">
                        <ListBoxItem x:ConnectionId='5'                          
                                     Name="listitem1">
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock Text=""
                                           VerticalAlignment="Center"
                                           FontFamily="Segoe MDL2 Assets"  />
                                <TextBlock Text="Home"
                                           Margin="30,0,0,0"/>
                            </StackPanel>
                        </ListBoxItem>
                        <ListBoxItem x:ConnectionId='6'                          
                                     Name="listitem2">
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock Text=""
                                           VerticalAlignment="Center"
                                           FontFamily="Segoe MDL2 Assets"  />
                                <TextBlock Text="Stations"
                                           Margin="30,0,0,0"/>
                            </StackPanel>
                        </ListBoxItem>

                        <ListBoxItem x:ConnectionId='7'                          
                                     Name="listitem3">
                            <StackPanel Orientation="Horizontal" >
                                <TextBlock Text=""
                                           VerticalAlignment="Center"
                                           FontFamily="Segoe MDL2 Assets"  />
                                <TextBlock Text="Map"
                                           Margin="30,0,0,0"/>
                            </StackPanel>
                        </ListBoxItem>
                    </ListBox>
                    <ListView BorderBrush="LightGray"
                              BorderThickness="0,1,0,0" 
                              VerticalAlignment="Bottom"
                              HorizontalAlignment="Stretch"
                              SelectionMode="None" >
                        <ListViewItem x:ConnectionId='4'                           >
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="" 
                                           FontFamily="Segoe MDL2 Assets" 
                                           VerticalAlignment="Center"/>
                                <TextBlock Text="Settings"  
                                           Margin="30,0,0,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </ListViewItem>
                    </ListView>
                </Grid>
            </SplitView.Pane>
            <SplitView.Content>
                    <Frame x:ConnectionId='8' Name="myFrame1" 
                           Background="WhiteSmoke"/>
            </SplitView.Content>
        </SplitView>

    </Grid>
</Page>

