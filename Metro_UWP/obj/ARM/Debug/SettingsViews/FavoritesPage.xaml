<Page x:ConnectionId='1'
    x:Class="Metro_UWP.SettingsViews.FavoritesPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Metro_UWP.SettingsViews"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:DataType="using:Metro_UWP.Models"  
                        
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <ItemsPanelTemplate x:Key="ItemsPanelTemplate" >
            <ItemsStackPanel/>
        </ItemsPanelTemplate>
    </Page.Resources>
    
    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Margin="5,5,5,0"
                    Background="White"
                    BorderBrush="#eee"
                    BorderThickness="1">
            <TextBlock x:ConnectionId='5' FontWeight="Light"
                       FontSize="25"
                       Name="StationName"
                       Text=" - - - "
                       TextAlignment="Center"
                       Padding="10"/> 
        </StackPanel>
        
        <Grid Margin="5" 
              Background="White"
              BorderBrush="#eee"
              Grid.Row="1"
              BorderThickness="1">
            <Pivot x:ConnectionId='2' Name="MyPivot"
                                                              >
            <PivotItem>
                <PivotItem.Header >
                    Sousse - Mahdia
                </PivotItem.Header>
                <PivotItem.Content>
                    <Grid Padding="10">
                        <GridView x:ConnectionId='4' Name="MyListView_sm"
                                                                  
                                  IsItemClickEnabled="True"
                                  ItemsPanel="{StaticResource ResourceKey=ItemsPanelTemplate}">

                            <GridView.ItemTemplate>
                                <DataTemplate                              >
                                    <StackPanel Padding="10"  
                                                Width="300"
                                                Margin="-1"
                                                HorizontalAlignment="Stretch"
                                                BorderThickness="0,1,0,1"
                                                BorderBrush="#eee">
                                        <TextBlock Text="{Binding NameFR}"
                                                   HorizontalAlignment="Center" />
                                        <TextBlock Text="{Binding NameAR}"
                                                   FontSize="11"
                                                   Foreground="Gray"
                                                   HorizontalAlignment="Center" />
                                    </StackPanel>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </Grid>
                </PivotItem.Content>
            </PivotItem>
            <PivotItem>
                <PivotItem.Header>
                    Mahdia - Sousse
                </PivotItem.Header>
                <PivotItem.Content>
                    <Grid Padding="10">
                        <GridView x:ConnectionId='3' Name="MyListView_ms" 
                                                                  
                                  IsItemClickEnabled="True"
                                  ItemsPanel="{StaticResource ResourceKey=ItemsPanelTemplate}">
                            <GridView.ItemTemplate>
                                <DataTemplate                              >
                                    <StackPanel Padding="10" 
                                                Width="300"
                                                HorizontalAlignment="Stretch"
                                                BorderThickness="0,1,0,1"
                                                BorderBrush="#eee">
                                        <TextBlock Text="{Binding NameFR}"
                                                   HorizontalAlignment="Center" />
                                        <TextBlock Text="{Binding NameAR}"
                                                   FontSize="11"
                                                   Foreground="Gray"
                                                   HorizontalAlignment="Center" />
                                    </StackPanel>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </Grid>
                </PivotItem.Content>
            </PivotItem>
        </Pivot>
        </Grid>
    </Grid>
</Page>

